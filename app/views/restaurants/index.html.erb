
<div class="container">
  <h1>Restaurants</h1>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li>
        <%= link_to restaurant_path(restaurant) do %>
          <%= restaurant.name %>
        <% end %>
        <em> <%= restaurant.address %></em>
        <strong><%= restaurant.category %></strong>
        <%= restaurant.phone_number %>
      </li>
    <% end %>
  <ul>

</div>

