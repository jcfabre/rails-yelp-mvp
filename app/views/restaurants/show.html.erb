
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 text-center">
      <h1> <%= @restaurant.name %> </h1>
      <ul>
        <li>Address: <%= @restaurant.address %> </li>
        <li>Category: <%= @restaurant.category %></li>
        <li>Phone Number: <%= @restaurant.phone_number %></li>
      </ul>
      <h2> Reviews </h2>
      <ul>
        <% @restaurant.reviews.each do |review| %>
        <li>
          <%= review.content %>
          <%= review.rating %>
        </li>
        <% end %>
      </ul>
      <%= link_to "Add a review", new_restaurant_review_path(@restaurant, @review), class: "btn btn-primary" %>
    </div>
  </div>
</div>

